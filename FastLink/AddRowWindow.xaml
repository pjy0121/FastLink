<mah:MetroWindow x:Class="FastLink.AddRowWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="Add Link"
                 Width="517"
                 Height="287"
                 Icon="Resources/thunder.ico"
                 WindowStartupLocation="CenterOwner">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="0,4,0,8"/>

        <TextBlock Text="Path" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="PathBox" Grid.Row="1" Grid.Column="1" Margin="0,4,0,8"/>

        <TextBlock Text="Type" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
        <ComboBox x:Name="TypeCombo" Grid.Row="2" Grid.Column="1" Margin="0,4,0,8">
            <ComboBoxItem Content="File/Folder"/>
            <ComboBoxItem Content="Web"/>
        </ComboBox>

        <TextBlock Text="Hotkey" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="HotkeyKeyBox"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="0,4,0,8"
                 VerticalAlignment="Center"
                 HorizontalContentAlignment="Center"
                 MaxLength="4"
                 Text=""
                 ToolTip="Focus here and press a key"/>
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Style="{StaticResource ButtonStyle}" MinWidth="90" Height="36" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Cancel" Style="{StaticResource ButtonStyle}" Background="LightSlateGray" MinWidth="90" Height="36" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
